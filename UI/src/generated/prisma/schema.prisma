generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id @default(cuid(2))
  email           String        @unique
  username        String        @unique
  hashed_password String
  trackedUsers    UserTracked[]
}

model TrackedUser {
  steamid    String   @id
  vacbans    Int
  gamebans   Int
  date_added DateTime @default(now())

  trackedById UserTracked[]
}

model UserTracked {
  id     String @id @default(cuid(2))
  user   User   @relation(fields: [userId], references: [id])
  userId String

  trackedUser        TrackedUser @relation(fields: [trackedUserSteamid], references: [steamid])
  trackedUserSteamid String
  date_added         DateTime    @default(now())

  @@unique([userId, trackedUserSteamid])
}
